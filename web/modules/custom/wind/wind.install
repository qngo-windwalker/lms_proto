/**
 * Disable a block with checking.
 * @param $id string : block id.
 */
function _wind_delete_block($id) {
  /** @var \Drupal\block\Entity\Block $block */
  $block = Block::load($id);
  if ($block) {
    if($block->delete()){
      $block->save();
    }
  }
}

function _wind_disable_block($id) {
  /** @var \Drupal\block\Entity\Block $block */
  $block = Block::load($id);
  if ($block) {
    $block->setRegion('footer');
    $block->disable()->save();
  }
}
